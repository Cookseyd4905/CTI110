# This program will take a series of positive numbers and 
# display their sum.

def Main():
    print("Please enter a positive number to begin"
          " or a negative number to end")
    number = int(input())
    sum = number
    
    while number > -1:
        print("Which number would you like to add to it?")
        print("Enter a negative number to terminate the program")
        number = int(input())
        sum += number
        print("Your new number is", +(sum))
        print("Enter a new number")
        number = int(input())
        
        














Main()
